	$(DOCSRC)/man1/pbs.1B \
	$(DOCSRC)/man1/pbsdsh.1B \
	$(DOCSRC)/man1/nqs2pbs.1B \
	$(DOCSRC)/man1/basl2c.1B \
	$(DOCSRC)/man1/xpbs.1B \
	$(DOCSRC)/man1/xpbsmon.1B

