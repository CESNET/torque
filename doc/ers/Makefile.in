	$(DOCSRC)/man1/pbs_queue_attributes.7B \
	$(DOCSRC)/man1/pbs_server_attributes.7B \
	${AUXRESC}

MAN8 =	$(DOCSRC)/man8/qdisable.8B \
	$(DOCSRC)/man8/qenable.8B \
	$(DOCSRC)/man8/pbs_mom.8B \
