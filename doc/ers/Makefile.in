	$(DOCSRC)/man3/pbs_connect.3B \
	$(DOCSRC)/man3/pbs_deljob.3B \
	$(DOCSRC)/man3/pbs_default.3B \
	$(DOCSRC)/man3/pbs_disconnect.3B \
	$(DOCSRC)/man3/pbs_geterrmsg.3B \
	$(DOCSRC)/man3/pbs_holdjob.3B \
